<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. [Action Bar] -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
    </style>

    <!-- Base application theme. [Action Bar] -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
    </style>

    <style name="AppTheme_Actionbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textInputLayoutFocusedRectEnabled">true</item>
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_primary_light</item>
    </style>

    <!-- Loading dialog -->
    <style name="LoadingDialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DefaultMaterialButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dubai_medium</item>
        <item name="android:backgroundTint">@color/bg_button</item>
    </style>

    <style name="VeryLargeTextBold">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VeryLargeTextMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="LargeTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeTextMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="SmallTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallTextMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VerySmallTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VerySmallTextMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Tab layout -->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RoundedRectangleShapeImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

    <!-- Circular Imageview-->
    <style name="CircularImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>